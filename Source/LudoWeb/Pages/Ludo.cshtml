@page
@model LudoWeb.Pages.Ludo
@{
    ViewData["Title"] = "Play Ludo";
}
<br>
<style>
#welcomeContainer {
  height: 200px;
  position: relative;
}
.center {
  margin: 0;
  position: absolute;
  top: 90%;
  left: 50%;
  width: 70%;
  -ms-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
}
</style>
<div id="welcomeContainer">
    <h1 style="text-align:center;">Welcome to Ludo!</h1>
    <div class="center">
     <button class="center" id="btn_createGame" onclick="NewGame()">New Game</button>
    </div>
</div>
<div id="controlBox" style="position: absolute; right: 20px; display: none">
    <button onclick="InvitePlayer()" style="margin-bottom:4%; width: 48%">
        Invite player
    </button>
    <button style="margin-bottom:4%; width: 48%">
        Add AI
    </button>
    <div id="messageBox" style="border: 2px dotted black;">
        <p id="messagePlayer1" style="border: 1px solid black; margin: 10px"></p>
        <p id="messagePlayer2" style="border: 1px solid black; margin: 10px"></p>
        <p id="messagePlayer3" style="border: 1px solid black; margin: 10px"></p>
        <p id="messagePlayer4" style="border: 1px solid black; margin: 10px"></p>
    </div>
    <button style="margin-top:10px; width: 100%">Start game</button>
    <div style="margin-top: 10%; border: 1px solid black" id="chatBox">
        <br>
         <input style="width:100%" type="text" id="txt_message" name="Message" value="Send message">
    </div>
</div>
<div id="playingField" style="width:100%;height:100%;color:white; display: none">
    
    @for (int x = 0; x < Model.XCount; x++)
    {
       
        <div style="width:100%;height:100%;color:white;display:flex;">
            @for (int y = 0; y < Model.YCount; y++)
            {
                var square = Model.GetGameSquare(x, y);
                if (square != null)
                {
                    <div class="GameSquare"
                         id="@square.Id"
                         style="background-color:@square.Color;
                            height:50px;
                            width:50px;
                            display:flex;
                            align-items: center;
                            justify-content: center;
                            border:solid;
                            border-width:1px;
                            border-color:black">
                        <img src="~/images/Pawns/red_64.png" style="max-height:100%; max-width:100%; padding:15%">
                    </div>
                }
                else
                {
                    <div class="NoSquare" style="background-color:transparent;height:50px;width:50px;"></div>
                }
            }
        </div>
    }
</div>




<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/game.js"></script>