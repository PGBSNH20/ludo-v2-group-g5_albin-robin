@page
@model LudoWeb.Pages.Board
@{
    ViewData["Title"] = "Game";
    int globalX;
    int glboalY;
}

<div style="width:100%;height:100%;color:white;">
    @for (int x = 0; x < Model.XCount; x++)
    {
        <div style="width:100%;height:100%;color:white;display:flex;">
            @for (int y = 0; y < Model.YCount; y++)
            {
                var square = Model.GetGameSquare(x, y);
                if (square != null)
                {
                    <div class="GameSquare"
                         id="@square.Id"
                         style="background-color:@square.Color;
                            height:50px;
                            width:50px;
                            display:flex;
                            align-items: center;
                            justify-content: center;
                            border:solid;
                            border-width:1px;
                            border-color:black">
                            <img src="~/images/Pawn.svg" style="max-height:100%; max-width:100%; padding:15%">
                    </div>
                }
                else
                {
                    <div class="NoSquare" style="background-color:transparent;height:50px;width:50px;"></div>
                }
            }
        </div>
    }
</div>

